<!-- model -->
@model IndignadoWeb.MovAdminServiceReference.DTResource_MovAdmin

<li class="item" style="width:620px;">
    <div class="shadowl">
        <div class="shadowr">
            <div class="int">
                <!-- header -->
                <div class="title">
                    @if ((@Model.urlLink != null) && (@Model.urlLink != ""))
                    {
                        <h3><a href="@Model.urlLink">@Model.title</a></h3>
                    }
                    else
                    {
                        <h3>@Model.title</h3>
                    }
                </div>

                <div class="body">
                    <!-- fields -->
                    @Html.Raw(HttpUtility.HtmlDecode(Model.description))
                
                    <!-- image -->
                    @if ((@Model.urlImage != null) && (@Model.urlImage != ""))
                    {
                        <div class="img">
                            <img src="@Html.DisplayFor(m => m.urlImage)" width="400" alt=""/>
                        </div>
                    }
                
                    <!-- video -->
                    @{
                        if ((@Model.urlVideo != null) && (@Model.urlVideo != ""))
                        {
                            <text>
                                <br />
                                <br />
                                <iframe style="margin:0 20px" src="@Html.DisplayFor(m => m.urlVideo)?wmode=transparent" frameborder="0" width="560" height="315"></iframe>
                            </text>
                        }
                    }

                    @if ((@Model.urlThumb != null) && (@Model.urlThumb != ""))
                    {
                        <td valign="top">
                            <!-- thumbnail -->
                            <img src="@Html.DisplayFor(m => m.urlThumb)" width="120px"/>
                        </td>
                    }
                    <div class="likes">
                        Likes: @Html.DisplayFor(m => m.numberLikes)
                        <br />
                        Marks as inappropriate: @Html.DisplayFor(m => m.numberMarksInappr)
                    </div>
                    
                    <div class="clear"></div>
                    <div class="footer">
                        <!-- date -->
                        Date: @Model.date.ToString("yyyy-MM-dd HH:mm")
                        
                        <!-- author -->
                        <div class="user">
                            by @Html.ActionLink("" + @Model.username, "UserDetails", new { id = @Model.idUser })
                        </div>

                        <div class="report">
                            <!-- enable / disable -->
                            @using (Html.BeginForm(new { id = @Model.id, userId = @Model.idUser }))
                            {
                                if (@Model.disabled == 0)
                                {
                                    <input type="submit" class="boton-big-red" name="buttonDisable" value="Disable resource" />
                                }

                                else
                                {
                                    <text><b>Resource disabled</b></text>
                                    <input type="submit" class="boton-big-red" name="buttonEnable" value="Enable resource" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</li>
<br />
