<!-- model -->
@model IndignadoWeb.NewsResourcesServiceReference.DTRssItem
           
<li class="item">
    <div class="shadowl">
        <div class="shadowr">
            <div class="int">
                <div class="title">
                    <h3><a href="@Model.itemUrl" target="_blank">@Model.title</a></h3>
                </div>
                <!-- header -->
    
                <div class="body">
                    @if ((@Model.image != null) && (@Model.image != "")) {
                        <div class="img">
                            <img src="@Model.image" width="120px"/>
                        </div>
                    }
                    <div class="desc">
                        @Html.Raw(HttpUtility.HtmlDecode(Model.description))     
                    </div>
                    <div class="footer">
                        Date: @Model.date.ToString("yyyy-MM-dd HH:mm")

                        <div class="user">
                            by <a href="@Model.sourceUrl" target="_blank" title="Resources list by @Model.sourceTitle">@Model.sourceTitle</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</li>
<br />