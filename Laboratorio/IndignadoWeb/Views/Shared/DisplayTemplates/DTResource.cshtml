<!-- model -->
@model IndignadoWeb.NewsResourcesServiceReference.DTResource
           
<div>
    <!-- header -->
    <h3><a href="@Html.DisplayFor(m => m.urlLink)">@Html.DisplayFor(m => m.title)</a></h3>
    
    <table border-style="none">
        <tr>
            <td valign="top">
                <!-- fields -->
                @Html.Raw(HttpUtility.HtmlDecode(Model.description))
                <br />
                <br />
                Date: @Html.DisplayFor(m => m.date)
                <br />
                Internal ID: @Html.DisplayFor(m => m.id)
                <br />
                User: @Html.DisplayFor(m => m.idUser)
                
                <!-- image -->
                @{
                    if ((@Model.urlImage != null) && (@Model.urlImage != ""))
                    {
                        <text>
                            <br />
                            <br />
                            <img src="@Html.DisplayFor(m => m.urlImage)" width="400" alt=""/>
                        </text>
                    }
                }
                
                <!-- video -->
                @{
                    if ((@Model.urlVideo != null) && (@Model.urlVideo != ""))
                    {
                        <text>
                            <br />
                            <br />
                            <iframe src="@Html.DisplayFor(m => m.urlVideo)" frameborder="0" width="400" height="300"></iframe>
                        </text>
                    }
                }
            </td>
            <td valign="top">
                <!-- thumbnail -->
                <img src="@Html.DisplayFor(m => m.urlThumb)" width="120px"/>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <!-- likes -->
                @using (Html.BeginForm(new { id = @Model.id }))
                {
                    <text>Likes: </text> @Html.DisplayFor(m => m.numberLikes);
                    
                    if (@Model.iLikeIt == 0)
                    {
                        <input type="submit" name="buttonLike" value="Like it" />
                    }

                    if (Model.iLikeIt > 0)
                    {
                        <input type="submit" name="buttonUnlike" value="Unlike it" />
                    }
                }
            </td>
        </tr>
    </table>
</div>
