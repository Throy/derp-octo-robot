<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/styles/Style1/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/Style1/forms.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/Style1/menu.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/Style1/lists.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/Style1/MeetingsList.css")" rel="stylesheet" type="text/css" />
    <link href="../../Content/styles/Style1/ThemeCategories.css" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/styles/Style1/chat.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/Style1/screen.css")" rel="stylesheet" type="text/css" />
    <!--[if lte IE 7]>
    <link href="@Url.Content("~/Content/styles/Style1/screen_ie.css")" rel="stylesheet" type="text/css" />
    <![endif]-->

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    @if (ViewBag.UserIsRegUser)
    {
        <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/chat.js")" type="text/javascript"></script>
    }
    
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-language" content="es" />

    <!--<link href="../../Content/images/ibeticon.png" rel="icon" type="image/x-icon" />
    <link href="../../Content/images/ibeticon.png" rel="shortcut icon" /> -->
</head>
<body>

<div id="contenedor">
    <div id="menu">
        <ul>
            <li class="outer"><span class="menubtn">@Html.ActionLink("Home", "Index", "Home")</span></li>

            <!-- meetings -->
            <li class="outer"><span class="menubtn"><a>Meetings</a></span>
                <ul>
                    @if (ViewBag.UserIsRegUser)
                    {
                        <li class="menuitm">@Html.ActionLink("Create meeting", "MeetingCreate", "Home")</li>
                    }
                    <li class="menuitm">@Html.ActionLink("Meetings list", "MeetingsList", "Home")</li>
                    @if (ViewBag.UserIsRegUser)
                    {
                        <li class="menuitm">@Html.ActionLink("Meetings list on attendance", "MeetingsListOnAttend", "Home")</li>
                        <li class="menuitm">@Html.ActionLink("Meetings list on interest", "MeetingsListOnInterest", "Home")</li>
                    }
                </ul>
            </li>
            
            <!-- news resources -->
            <li class="outer"><span class="menubtn"><a>News and resources</a></span>
                <ul style="width:180px">
                    <li class="menuitm">@Html.ActionLink("List news", "NewsList", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("List recent resources", "ResourcesList", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("List top resources", "ResourcesListTopRanked", "Home")</li>
                    @if (ViewBag.UserIsRegUser)
                    {
                        <li class="menuitm">@Html.ActionLink("Share resource", "ResourceShare", "Home")</li>
                    }
                </ul>
            </li>
        </ul>                
        <span class="menulogon">
            <ul>
            @if(ViewBag.UserIsMovAdmin) {
                <!-- movement admin -->
                <li class="outer"><span class="menubtn"><a>Movement admin</a></span>
                    <ul>
                        <li class="menuitm">@Html.ActionLink("Configure movement", "MovementConfig", "Home")</li>
                        <li class="menuitm">@Html.ActionLink("Configure RSS sources", "RssSourcesConfig", "Home")</li>
                        <li class="menuitm">@Html.ActionLink("Configure theme categories", "ThemeCategoriesConfig", "Home")</li>
                        <li class="menuitm">@Html.ActionLink("Manage resources", "ResourcesManage", "Home")</li>
                        <li class="menuitm">@Html.ActionLink("Manage users", "UsersManage", "Home")</li>
                        <li class="menuitm">@Html.ActionLink("Users register report", "UsersRegisterReport", "Home")</li>
                    </ul>
                </li>
            }
            
            @Html.Partial("_LogOnPartial")
            </ul>
        </span>                   
      </div>
</div>
        
<div id="Kontainer">
    
    <div id="welcome"><h2 class="shadowH2 welcomeTitle">Welcome to @ViewBag.TenantInfo.name </h2></div>
    <div id="Lateral">
    <div id="logo">
        <a href="/" style="background: url('@Url.Content("~/Content/images/Thumb/" + ViewBag.TenantInfo.logo)') top left no-repeat;"></a></div>
        
    </div>
    <div id="Content">
        <div style="float:left;margin:10px; width:996px">
            @RenderBody()
        </div>
    </div>
    
    <div id="Footer">
        <p style="float:right;margin-right:10px;margin-top:3px;">tsi1 grupo 9 2012</p>
        <p style="float:left;margin-left:10px;margin-top:3px;">powered by Indignado Framework</p>
    </div>
    
    <div style="margin-left: 10px;color: #666">
        <br />     
    </div>
</div>

@if (ViewBag.UserIsRegUser)
{
    <div class="ChatBar">
        
            <div id="UsersOnline">
                <div class="UsersOnlineHead">
                    <div id="UsersOnlineTitle">Chat - <b>0</b> users online</div>
                    <div class="UsersOnlineOptions">
                        <a href="javascript:void(0)" onclick="javascript:toggleUsersOnline()">-</a>
                    </div>
                    <br clear="all"/>
                </div>
                <div class="UsersOnlineContent">
                    <ul id="UsersOnlineList"></ul>
                    <div class="UserListEnd"></div>
                </div>
        
        </div>
    </div>
}

</body>
</html>
