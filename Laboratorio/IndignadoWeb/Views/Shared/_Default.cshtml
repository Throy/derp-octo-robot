<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/styles/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/forms.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/menu.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-language" content="es" />

    <!--<link href="../../Content/images/ibeticon.png" rel="icon" type="image/x-icon" />
    <link href="../../Content/images/ibeticon.png" rel="shortcut icon" /> -->
</head>
<body>

<div id="contenedor">
    <div id="menu">
        <ul>
            <li class="outer"><span class="menubtn">@Html.ActionLink("Home", "Index", "Home")</span></li>

            <!-- meetings -->
            <li class="outer"><span class="menubtn"><a>Meetings</a></span>
                <ul>
                    <li class="menuitm">@Html.ActionLink("Create meeting", "MeetingCreate", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("Meetings list", "MeetingsList", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("Meetings list on attendance", "MeetingsListOnAttend", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("Meetings map", "MeetingsMap", "Home")</li>
                </ul>
            </li>
            
            <!-- news resources -->
            <li class="outer"><span class="menubtn"><a>NewsResources</a></span>
                <ul>
                    <li class="menuitm">@Html.ActionLink("List news", "NewsList", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("List resources", "ResourcesList", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("Share resource", "ResourceShare", "Home")</li>
                </ul>
            </li>
            
            <!-- user -->
            <li class="outer"><span class="menubtn"><a>Users</a></span>
                <ul>
                    <li class="menuitm">@Html.ActionLink("List theme categories", "ThemeCategoriesList", "Home")</li>
                </ul>
            </li>
            
            <!-- movement admin -->
            <li class="outer"><span class="menubtn"><a>MovAdmin</a></span>
                <ul>
                    <li class="menuitm">@Html.ActionLink("Configure movement", "MovementConfig", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("Configure RSS sources", "RssSourcesConfig", "Home")</li>
                    <li class="menuitm">@Html.ActionLink("Configure theme categories", "ThemeCategoriesConfig", "Home")</li>
                </ul>
            </li>
            
            <!-- about -->
            <li class="outer"><span class="menubtn">@Html.ActionLink("About", "About", "Home")</span></li>
        </ul>                
        <span class="menufecha">
             @Html.Partial("_LogOnPartial")
        </span>                   
      </div>
</div>
        
<div id="Kontainer">
    <div id="Lateral">
        <div id="logo"><a href="/" style="background: url('@Url.Content("~/Content/images/anon_seal_small.png")') top left no-repeat;"></a></div>
        
        <div id="ContentLateral">
            <div style="float:left;padding:5px;">
                Aca algo? botones?
                <br />
                Descripcion del movimiento?
                <br />
                <br />
                bla bla bla
                <br />
                <br />
                Usuarios online: 500
                <br />
                Andres, Agustin, Betto, Javier, ...
                <br />
            </div>
        </div>
    </div>
    <div id="Content">
        <div style="float:left;padding:10px;width:100%">
            @RenderBody()
        </div>
    </div>
    
    <div id="Footer">
        <p style="float:right;margin-right:10px;margin-top:3px;">tsi</p>
        <p style="float:left;margin-left:10px;margin-top:3px;">Indignado Framework</p>
    </div>
    
    <div style="margin-left: 10px;color: #666">
        <br />     
    </div>
</div>

</body>
</html>
