<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/styles/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/forms.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/styles/menu.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-language" content="es" />

    <!--<link href="../../Content/images/ibeticon.png" rel="icon" type="image/x-icon" />
    <link href="../../Content/images/ibeticon.png" rel="shortcut icon" /> -->
</head>
<body>

<div id="contenedor">
    <div id="menu">
        <ul>
            <li class="outer"><span class="menubtn">@Html.ActionLink("Home", "Index", "SysAdmin")</span></li>
            
            <!-- system admin -->
            <li class="outer"><span class="menubtn"><a>Movements</a></span>
                <ul>
                    <li class="menuitm">@Html.ActionLink("Create movement", "MovementCreate", "SysAdmin")</li>
                    <li class="menuitm">@Html.ActionLink("Movements list", "MovementsList", "SysAdmin")</li>
                </ul>
            </li>
            
        </ul>                
        <span class="menufecha">
            @if(Request.IsAuthenticated) {
                <text>Welcome <strong>@User.Identity.Name</strong>!
                [ @Html.ActionLink("Log Off", "LogOff", "SysAdmin") ]</text>
            }
        </span>                   
    </div>
</div>
        
<div id="Kontainer">
    <div id="Content" style="width:996px;">
        <div style="float:left;padding:10px;width:100%">
            @RenderBody()
        </div>
    </div>
    
    <div id="Footer">
        <p style="float:right;margin-right:10px;margin-top:3px;">tsi</p>
        <p style="float:left;margin-left:10px;margin-top:3px;">Indignado Framework</p>
    </div>
    
    <div style="margin-left: 10px;color: #666">
        <br />     
    </div>
</div>

</body>
</html>
