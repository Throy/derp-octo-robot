@model IndignadoWeb.Models.RegisterExternalModel

@{
    ViewBag.Title = "Register step 2";
}

<h2>New user</h2>
<p>
    We need you to fill in the following information:
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div class="reg-box big-red">
        <fieldset>

            <div class="editor-label">
                @Html.LabelFor(m => m.Latitud)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Latitud)
                @Html.ValidationMessageFor(m => m.Latitud)
            </div>
            
            <div class="editor-label">
                @Html.LabelFor(m => m.Longitud)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Longitud)
                @Html.ValidationMessageFor(m => m.Longitud)
            </div>

            <p>
                <input type="submit" value="Confirm" style="display:none;" id="WorkaroundForOperaInputFocusBorderBug" />
                <input type="submit"  class="boton-big-red" value="Confirm" />
            </p>
        </fieldset>
    </div>
}
