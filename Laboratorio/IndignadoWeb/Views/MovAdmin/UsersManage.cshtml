<!-- model -->
@model IndignadoWeb.Models.UsersModel

<!-- page title -->
@{
    ViewBag.Title = "Indignado Framework - Manage users";
}

<!-- page content -->

<h2>Manage users</h2>

<div class="shadowH2" style="height:40px;">
@using (Html.BeginForm(new { id = 0 }))
{
        <div class="tab">
        @if (Model.listType == 0)
        {
            <text>
                <div class="tabActive">Everyone</div>
            </text>
        }
        else
        {
            <input type="submit" class="boton-big-red, tabBtn" name="buttonShowEveryone" value="Show everyone" />
        }
        </div>
        <div class="tab">
        @if (Model.listType == 1)
        {
            <text>
                <div class="tabActive">Allowed users</div>
            </text>
        }
        else
        {
            <input type="submit" class="boton-big-red, tabBtn" name="buttonShowAllowed" value="Show allowed" />
        }
        </div>
        <div class="tab">
        @if (Model.listType == 2)
        {
            <text>
                <div class="tabActive">Banned users</div>
            </text>
        }
        else
        {
            <input type="submit" class="boton-big-red, tabBtn" name="buttonShowBanned" value="Show banned" />
        }
        </div>
        <div class="tab" style="width:3px;"></div>
}
</div>

<ul class="list1" style="margin:0 80px;">
    @Html.DisplayFor(m => m.users.items)
</ul>
