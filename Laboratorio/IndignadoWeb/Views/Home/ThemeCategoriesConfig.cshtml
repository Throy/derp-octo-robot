<!-- model -->
@model IndignadoWeb.Models.ThemeCategoriesConfigModel

<!-- scripts -->
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<!-- page title -->
@{
    ViewBag.Title = "Indignado Framework - Theme categories list";
}

<!-- page content -->

<h2>Current theme categories</h2>

<p>
    @Html.DisplayFor(m => m.items.items)
</p>

<h2>Add theme category</h2>

@using (Html.BeginForm(new { id = 0 }))
{
    @Html.ValidationSummary(true, "Some fields have errors, please fix them.")
    <div class="reg-box big-red">
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(m => m.newItem.title)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.newItem.title)
                @Html.ValidationMessageFor(m => m.newItem.title)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.newItem.description)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.newItem.description)
                @Html.ValidationMessageFor(m => m.newItem.description)
            </div>
            <p>
                <input type="submit" class="boton-big-red" name="buttonAdd" value="Add" />
            </p>
        </fieldset>
    </div>
}

