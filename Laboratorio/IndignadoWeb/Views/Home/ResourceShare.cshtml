<!-- model -->
@model IndignadoWeb.Models.ShareResourceModel

<!-- scripts -->
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<!-- page title -->
@{
    ViewBag.Title = "Indignado Framework - Share resource";
}

<!-- page content -->

<h2>Share resource</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Some fields have errors, please fix them.")
    <div>
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(m => m.title)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.title)
                @Html.ValidationMessageFor(m => m.title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.description)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.description)
                @Html.ValidationMessageFor(m => m.description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.urlLink)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.urlLink)
                @Html.ValidationMessageFor(m => m.urlLink)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.urlThumb)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.urlThumb)
                @Html.ValidationMessageFor(m => m.urlThumb)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.urlImage)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.urlImage)
                @Html.ValidationMessageFor(m => m.urlImage)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.urlVideo)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.urlVideo)
                @Html.ValidationMessageFor(m => m.urlVideo)
            </div>

            <p>
                <input type="submit" name="buttonShare" value="Share resource" />
                <input type="submit" name="buttonGetData" value="Get data from link" />
            </p>
        </fieldset>
    </div>
}
