<!-- model -->
@model IndignadoWeb.Models.RssSourcesModel

<!-- scripts -->
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<!-- page title -->
@{
    ViewBag.Title = "Indignado Framework - Configure sources";
}

<!-- page content -->

<h2>Add Sources</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Some fields have errors, please fix them.")
    <div>
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(m => m.newItem.url)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.newItem.url)
                @Html.ValidationMessageFor(m => m.newItem.url)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.newItem.tag)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.newItem.tag)
                @Html.ValidationMessageFor(m => m.newItem.tag)
            </div>
            <p>
                <input type="submit" name="buttonAdd" value="Add source" />
                <input type="submit" name="buttonRemove" value="Remove source" />
            </p>
        </fieldset>
    </div>
    <h2>List of Sources</h2>
    <p>
         @Html.ListBoxFor(m => m.items.items, new MultiSelectList(Model.items.items,"tag","url" ), new { Multiple = "multiple" }) 
  
    </p>
}

